<div class="dog-container">
    <br>
    <h1><%- dog[0].name %></h1>
    <hr>
    <div class="col-md6 col-lg-6 text-center">
        <img class="largeDogImg" src="../images/dogs/<%- dog[0].id %>.jpg" alt='<%- dog[0].name %>'>
    </div>
    <div class="col-md3 col-lg-3 text-center">
        <table>
            <caption>Details</caption>
            <tr>
                <th>Breed:</th>
                <td><%- dog[0].breed %></td>
            </tr>
            <tr>
                <th>Gender:</th>
                <% if(dog[0].gender) { %>
                <td>Male</td>
                <% }else{ %>
                <td>Female</td>
                <% } %>
            </tr>
            <tr>
                <th>Age:</th>
                <td><%- dog[0].age %></td>
            </tr>
            <tr>
                <th>Size:</th>
                <td><%- dog[0].size %></td>
            </tr>
        </table>
        <table>
            <caption>Health</caption>
            <tr>
                <th>Vaccinations up to date?</th>
                <% if(dog[0].vaccination) { %>
                <td>&#x2713;</td>
                <% }else{ %>
                <td>&#x2717;</td>
                <% } %>
            </tr>
            <tr>
                <th>Desexed?</th>
                <% if(dog[0].desex) { %>
                <td>&#x2713;</td>
                <% }else{ %>
                <td>&#x2717;</td>
                <% } %>
            </tr>
            <tr>
                <th>Wormed?</th>
                <% if(dog[0].deworm) { %>
                <td>&#x2713;</td>
                <% }else{ %>
                <td>&#x2717;</td>
                <% } %>
            </tr>
            <tr>
                <th>Heart Worm Treated?</th>
                <% if(dog[0].heartworm) { %>
                <td>&#x2713;</td>
                <% }else{ %>
                <td>&#x2717;</td>
                <% } %>
            </tr>
        </table>

    </div>
    <div class="col-md3 col-lg-3 text-center">
        <table>
            <caption>Personality</caption>
            <tr>
                <th>Energy:</th>
                <td><%- dog[0].energy %></td>
            </tr>
            <tr>
                <th>Confidence:</th>
                <td><%- dog[0].confidence %></td>
            </tr>
            <tr>
                <th>Focus:</th>
                <td><%- dog[0].focus %></td>
            </tr>
            <tr>
                <th>Independence:</th>
                <td><%- dog[0].independence %></td>
            </tr>
        </table>
        <table>
            <caption>Location</caption>
            <tr>
                <th>Address:</th>
                <td><%- dog[0].location %></td>
            </tr>
            <tr>
                <th>Phone:</th>
                <td><%- dog[0].Phone %></td>
            </tr>
            <tr>
                <th>Email:</th>
                <td><%- dog[0].email %></td>
            </tr>
        </table>
    </div>
</div>

